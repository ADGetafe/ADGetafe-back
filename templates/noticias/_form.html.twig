<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
{{ form_start(form) }}
<div class='heading-bar'>
    <div class='go-back'>
        <a href="{{ path('app_noticias_index') }}"><i class="fa-solid fa-chevron-left"></i></a>
            <div class="logo-form">
            <a href="/">
                <span class="logo-span">
                    <img class="logo-img" src="{{ asset('images/ADG-logo-transparente.png') }}" alt="ADG Logo"/>
                </span>
            </a>
        </div>
    </div>

    <div class='acciones-btn'>
        <button class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">{{ button_label|default('Publicar') }}</button>
    </div>
    
</div>

<div class='new-form'>
    <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
    </div>

        <div class='set-foto'>
            {{ form_widget(form.foto) }}
        </div>

        <div class='set-autoria'>
            {{ form_label(form.autor, 'Autoria') }}
            {{ form_widget(form.autor) }}
        </div>

        <div class='set-categoria'>
            {{ form_label(form.categoria) }}
            {{ form_widget(form.categoria) }}
        </div>

        <div class='set-titulo-noticia'>
            {{ form_label(form.titulo, ' ') }}
            {{ form_widget(form.titulo) }}
        </div>

        <div class='set-fragmento'>
            {{ form_label(form.fragmento, ' ') }}
            {{ form_widget(form.fragmento) }}
        </div>

        <div class='set-articulo'>
            {{ form_label(form.articulo, ' ') }}
            {{ form_widget(form.articulo) }}
        </div>


</div> 
{{ form_end(form) }}

</body>
</html>
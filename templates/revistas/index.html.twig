{% extends 'base.html.twig' %}

{% block title %}Revistas index{% endblock %}

{% block body %}

<div class="full-page">

<nav class="navBar">

<div class="logo">
    <a
        href="/">
        <span class="logo-span">
            <img class="logo-img" src="{{ asset('images/ADG-logo-transparente.png') }}" alt="ADG Logo"/>
        </span>
    </a>
</div>

<div class="logout">
    <ul>
        <li>
            <a href="{{ path('usuarios') }}">
                <button type="button" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                    Panel de administraci√≥n
                </button>
            </a>

            <a href="{{ path('app_noticias_index') }}">
                <button type="button" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                    Noticias
                </button>
            </a>
            <a href="/{{ app.user ? 'logout' : 'login' }}">
                <button type="button" class="text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                {{ app.user ? 'Salir' : 'login' }}
                <i class="fa-solid fa-door-open exit-icon icon-left"></i>
                </button>
                </a>
        </li>  
    </ul>
</div>
</nav>

<div class="headers-index">

    <h1 class="titulo">Revistas</h1>

<div class="btn-ag">
    <a href="{{ path('app_revistas_new') }}" class="boton-admin focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"><i class="fa-solid fa-plus icon-right"></i>Agregar Revista</a>
</div>
</div>

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg table-margin">
    <table class="w-full text-sm text-left text-black-500 dark:text-black-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-black-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Titulo
                </th>
                <th scope="col" class="py-3 px-6">
                    Revista
                </th>
                <th scope="col" class="py-3 px-6">
                    Actualizada
                </th>
                <th scope="col" class="py-3 px-6">
                    fragmento
                </th>
                <th scope="col" class="py-3 px-6">
                    
                </th>
            </tr>
        </thead>
        <tbody>
        {% for revista in revistas %}
            <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{ revista.titulo }}
                </th>
                <td class="py-4 px-6">
                    {{ revista.revista }}
                </td>
                <td class="py-4 px-6">
                    {{ revista.createdAt ? revista.createdAt|date('d-m-Y : (H:i)') : revista.updatedAt|date('Y-m-d H:i:s')  }}
                </td>
                <td class="py-4 px-6">
                    {{ revista.fragmento }}
                </td>
                <td class="py-4 px-6 td-flex">

                    <a href="{{ path('app_revistas_edit', {'id': revista.id}) }}">
                    <button type="button" class="focus:outline-none text-white bg-blue-400 hover:bg-blue-500 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-blue-900">
                    Editar
                    </button>
                    </a>
                    {{ include('revistas/_delete_index_form.html.twig') }}
                </td>
            </tr>
             {% else %}
            <tr class="bg-gray-50 border-b dark:bg-gray-800 dark:border-gray-700">
                <td colspan="6" class="py-4 px-6">
                    No records found
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
